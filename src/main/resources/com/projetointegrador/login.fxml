<Pane fx:id="root" prefHeight="480.0" prefWidth="640.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.projetointegrador.controllers.Login">
   <children>
      <Pane fx:id="fundo" layoutX="170.0" layoutY="40.0" prefHeight="400.0" prefWidth="300.0">
         <children>
            <Label fx:id="h2" layoutX="51.0" layoutY="105.0" text="Login" />
            <Label fx:id="h1" layoutX="51.0" layoutY="34.0" text="Ponto-Certo" textAlignment="CENTER" />
            <ImageView fitHeight="61.0" fitWidth="95.0" layoutX="188.0" layoutY="21.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/title.png" />
               </image>
            </ImageView>
            <TextField fx:id="tfEmail" layoutX="53.0" layoutY="169.0" prefHeight="25.0" prefWidth="194.0" promptText="Email" />
